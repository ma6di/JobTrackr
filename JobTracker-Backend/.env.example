# Environment Variables for JobTracker Backend
# Copy this file to .env and fill in your actual values

# ===========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ===========================================
# SQLite for development (current setup)
DATABASE_URL="file:./dev.db"

# PostgreSQL connection (for production migration)
# DATABASE_URL="postgresql://username:password@localhost:5432/jobtracker_dev"

# AWS RDS connection (production)
# DATABASE_URL="postgresql://username:password@your-rds-instance.region.rds.amazonaws.com:5432/jobtracker_prod"

# ===========================================
# üîê JWT AUTHENTICATION
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-refresh-token-secret"

# ===========================================
# ‚òÅÔ∏è AWS CONFIGURATION
# ===========================================
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# S3 Bucket for resume storage
AWS_S3_BUCKET="jobtracker-resumes-dev"
AWS_S3_REGION="us-east-1"

# File Upload Configuration
MAX_FILE_SIZE="5242880"  # 5MB in bytes
ALLOWED_FILE_TYPES="pdf,doc,docx,txt,rtf"

# ===========================================
# üåê SERVER CONFIGURATION
# ===========================================
PORT=5000
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"

# ===========================================
# üìß EMAIL CONFIGURATION (Optional)
# ===========================================
EMAIL_FROM="noreply@jobtracker.com"
EMAIL_SERVICE="gmail"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# ===========================================
# üîí SECURITY SETTINGS
# ===========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# üìÅ FILE UPLOAD SETTINGS
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"
