{
  "name": "jobtracker-backend",
  "version": "1.0.0",
  "description": "Backend API for JobTracker application with AWS integration",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "npx prisma migrate deploy && node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "prisma generate",
    "postinstall": "prisma generate",
    "test-server": "node src/server-simple.js",
    "test-dev": "nodemon src/server-simple.js",
    "db-server": "node src/server-database.js",
    "db-dev": "nodemon src/server-database.js",
    "auth-server": "node src/server-auth.js",
    "auth-dev": "nodemon src/server-auth.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "job-tracker",
    "express",
    "postgresql",
    "aws",
    "prisma",
    "rest-api"
  ],
  "author": "JobTracker Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.844.0",
    "@aws-sdk/s3-request-presigner": "^3.844.0",
    "@prisma/client": "^5.22.0",
    "@types/pg": "^8.15.5",
    "aws-sdk": "^2.1490.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "passport": "^0.7.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "pg": "^8.16.3",
    "prisma": "^5.22.0",
    "recharts": "^3.1.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  }
}
